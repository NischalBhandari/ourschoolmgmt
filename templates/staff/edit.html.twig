{# templates/registration/index.html.twig #} {% extends 'base.html.twig' %} {%
block body %}
<div class="container content">
  <div class="row">
    <div class="col-md-12">
      <div class="card bg-light mb-3 mt-3">
        <div class="card-body">
          <div class="card-header mb-3">Edit Staff</div>
          {% if is_granted('IS_AUTHENTICATED_FULLY') %}
          {{ form_start(form) }}
          <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
          </div>
          <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(form.staff_id, {'attr': {'class':
              'form-control'}}) }}
            </div>
          </div>
           <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(form.email, {'attr': {'class':
              'form-control'}}) }}
            </div>
          </div>
           <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(form.citizenship, {'attr': {'class':
              'form-control'}}) }}
            </div>
          </div>
          <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(form.phone, {'attr': {'class':
              'form-control'}}) }}
            </div>
          </div>
          <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(form.address, {'attr': {'class':
              'form-control'}}) }}
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
              <button type="submit" class="btn btn-primary">
                <i class="fa fa-btn fa-user"></i> Edit
              </button>
              <a href="/dashboard" class="btn btn-danger">
                <i class="fa fa-btn fa-user"></i> Cancel
              </a>

            </div>
          </div>
          {{ form_end(form) }}
          <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
            </div>
        </div>
        {% else %}


      </div>

    </div>
      
      <div>
      <span>You need to be logged in for this content</span>
      </div>
      <a href="{{ path('app_login') }}" class="btn btn-primary">
         Sign Up >></a
      >
       {% endif %}

  </div>

  </div>

</div>

{% endblock %}