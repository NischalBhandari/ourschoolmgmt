{# templates/registration/index.html.twig #} {% extends 'base.html.twig' %} {%
block body %}
<div class="container content">
  <div class="row">
    <div class="col-md-12">
      <div class="card bg-light mb-3 mt-3">
        <div class="card-body">
          <div class="card-header mb-3">Add New Class</div>
          {% if is_granted('ROLE_ADMIN') %}
          {{ form_start(form) }}
          <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(form.class, {'attr': {'class': 'form-control'}}) }}
            </div>
          </div>
          <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(form.starttime, {'attr': {'class':
              'form-control'}}) }}
            </div>
          </div>
           <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(form.endtime, {'attr': {'class':
              'form-control'}}) }}
            </div>
          </div>
         <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(form.subject, {'attr': {'class':
              'form-control'}}) }}
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
              <button type="submit" class="btn btn-primary">
                <i class="fa fa-btn fa-user"></i> Register
              </button>
            </div>
          </div>
          {{ form_end(form) }}
        </div>
        {% else %}


      </div>

    </div>
      
      <div>
      <span>You need to be logged as Admin for this content</span>
      </div>
      <a href="{{ path('app_login') }}" class="btn btn-primary">
         Sign In</a
      >
       {% endif %}

  </div>

  </div>

</div>

{% endblock %}